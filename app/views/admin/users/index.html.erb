<h2>Admin Page</h2>
</br><div align="right">
<%=link_to "Create new user", new_admin_user_path ,data: { no_turbolink: true } %>|

<%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
</div>
</br><h1 align="center">Listing users</h1>
 
<table class="container">

  <tr>
    <th>first_name</th>
    <th>last_name</th>
    <th>date_of_birth</th>
    <th>employee_id</th>
    <th>gender</th>
    <th>email</th>
    <th>role_id</th>
    <th>designation_id</th>
    <th>is_active</th>
    
  

  </tr>
 
  <% @users.each do |user| %>
  <tr></tr>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.date_of_birth %></td>
      <td><%= user.employee_id%></td>
      <td><%= user.gender%></td>
      <td><%= user.email %></td>
      <td><%= user.role.try(:name) %></td>
      <td><%= user.designation.try(:designation_name) %></td>
      <td><%= user.is_active%></td>
      
      <td><%=link_to "edit", edit_admin_user_path(user), data: { no_turbolink: true } %></td>
      <td><%=link_to "show", admin_user_path(user), data: { no_turbolink: true } %></td>
      <td><%=link_to "delete", admin_user_path(user),
            method: :delete,
            data: { confirm: 'Are you sure'}%></td>
          </tr>
  <% end %>
</table>


